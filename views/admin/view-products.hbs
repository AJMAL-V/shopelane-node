<section>
    <div class="container">
        <div class=" mt-4 mb-4 ">
            <a href="/admin/add-product" class="btn btn-success m">Add Product</a>
        </div>
        <table class="table mt-5" id="producttable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                   
                 <td> <img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.png" alt="image"></td>
                <td>
                      <a href="/admin/edit-product/{{this._id}}" class="btn  btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn  btn-danger"
                     onclick="return confirm('Are You Want To Delete {{this.Name}} ?')">Delete</a>
                  
                </td>


                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</section>
<script>
    $(document).ready( function () {
    $('#producttable').DataTable();
} );
</script>